<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo Applications</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid my-3">
      <div class="container text-center bg-dark bg-gradient rounded">
        <h1 class="text-center text-light">
          Todo Applications
        </h1>
        <a class="btn btn-sm btn-success" href="/">Home</a>
        <a class="btn btn-sm btn-success" href="/todos">Todo</a>
        <hr class="my-3" />
      </div>
      <div class="container text-center my-3">
        <h3>Todo List</h3>
        <p>List of Todo in Apps</p>

        <a href="/todos/create" class="btn btn-sm btn-primary">+ Add Todo</a>
      </div>
      <div class="container">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
            
              <th>No </th>
              <th>Task</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
             <% no = 1 %>
            <% todos.forEach(todos => { %>
              <td> 
               <%=no++%>
              <input type="hidden" value= <%=todos.id%>/>
            </td>
              <td>
                <div class="float-start">
                    <h5><%= todos.task %></h5>
                  </div>
              </td>
              <td>
                <% status = todos.status %>
                <h5><% if(status === true){ %>
                  <h5>Done!!!</h5>
                <% } else{ %>  
                  <h5>On Progress</h5>
               <% } %></h5>
              </td>
              <td>
                        <td>
                <div class="">
                  </div>
                  <a class="btn btn-sm btn-success" href="/todos/<%= todos.id %>"
                    >Details</a>
                  <a
                    class="btn btn-sm btn-info"
                    href="/todos/update/<%= todos.id %>"
                    >Update</a
                  >
                  <a
                    class="btn btn-sm btn-danger"
                    href="/todos/delete/<%= todos.id %>"
                    >Delete</a
                  >
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- JS Bootstrap -->
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
